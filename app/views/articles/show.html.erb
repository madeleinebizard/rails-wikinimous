<%= link_to "Create a post", articles_path %>
<div class='content'>
  <h1><%= @article.title %></h1>

  <%= link_to "Crayon", edit_article_path %>

  <%= link_to article_path(@article.id),
              method: :delete,
              data: { confirm: "Are you sure?" } do %>
    <i class="fa fa-trash" aria-hidden="true"></i>

  <% end %>
  <p> Content: <%= @article.content %></p>
</div>
